<% provide(:title, 'Sign in') %>
<h1>Sign in</h1>
<%= form_for(:session, url: sessions_path) do |f| %>

	<%= f.label :email %>
	<%= f.text_field :email %>

	<%= f.label :password %>
	<%= f.password_field :password %>

	<%= f.label :remember_me %>
	<%= f.check_box :remember_me %>

	<%= f.submit "Sign in" %>
<% end %> <!-- TODO: Add stylig to form and button -->

