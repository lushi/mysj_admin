<% provide(:title, 'Sign in') %>
<h1>Sign in</h1>

<div class="row">
	<div class="span6 offset3">
		<%= form_for(:session, url: sessions_path) do |f| %>

			<%= f.label :email %>
			<%= f.email_field :email %>

			<%= f.label :password %>
			<%= f.password_field :password %>

			<%= f.check_box :remember_me %>
			<%= f.label :remember_me, class: "checkbox" %>

			<%= f.submit "Sign in" %>
		<% end %>
	</div>
</div>

