<tbody>
	<tr>
		<th><%= payment.student.given_name %></th>
		<th><%= payment.student.surname %></th>
		<th><%= number_with_precision(payment.amount_cents.to_f / 100, precision: 2) %></th>
		<th><%= payment.currency %></th>
		<th><%= payment.method %></th>
		<th><%= payment.for %></th>
		<th><%= payment.memo %></th>
		<th><%= payment.created_at.to_date %></th>
		<th><% if current_student.admin? %>
		| <%= link_to "delete", payment, method: :delete, data: { confirm: "You sure? The record will be permanently deleted."} %>
		<% end %></th>
</tbody>