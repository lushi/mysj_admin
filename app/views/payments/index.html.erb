<% provide(:title, 'Payment history') %>

	<h1>Payment History</h1>
		<% if @payments.any? %>
			<table class="table table-striped table-condensed">
				<thead>
					<tr>
						<th><%= sortable "given_name"%></th>
						<th><%= sortable "surname" %></th>
						<th><%= sortable "amount_cents", "Amount" %></th>
						<th><%= sortable "currency" %></th>
						<th><%= sortable "method" %></th>
						<th><%= sortable "purpose" %></th>
						<th><%= sortable "memo" %></th>
						<th><%= sortable "created_at", "Created" %></th>
					</tr>
				</thead>
				<%= render @payments %>
		<% else %>
			<p>Nothing here yet.</p>
		<% end %>

<% if current_student.admin? %>
	<%= link_to "Add payment", new_payment_path %>
<% end %>
